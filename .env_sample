# Flask Configuration
FLASK_APP=main:create_app
FLASK_ENV=development
FLASK_DEBUG=1

# Application Secrets
SECRET_KEY='your_secure_flask_secret_key_for_sessions_and_csrf'
JWT_SECRET_KEY='your_secure_jwt_secret_key'

# Database (MySQL/MariaDB)
SQLALCHEMY_DATABASE_URI=mysql+pymysql://user:password@db:3306/appdb

# MySQL/MariaDB connection details for docker-compose 'db' service
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=appdb
MYSQL_USER=user
MYSQL_PASSWORD=password

# Google OAuth Credentials (leave empty if not using)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Application Behavior
DEFAULT_CURRENCY=SGD
DEFAULT_USER_ROLE=User

# Default Admin Credentials (will be used to create first admin if no users exist)
DEFAULT_ADMIN_EMAIL=admin@example.com
DEFAULT_ADMIN_PASSWORD=AdminPassword123